{
  "include": [
    "./src/**/**.ts",
    "./src/**/*.js",
    "./src/**/*.vue",
    "src/defines.local.js"
  ],
  "exclude": [
    "./src/vbWebEngine/dev-tools/*",
    "./src/.d.*/"
  ],
  "extends": "./src/vbWebEngine/dev-tools/tsconfig-base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./src/.d.tmp",
    "rootDir": ".",
    "paths": {
      "@vb/*": [
        "./src/vbWebEngine/*"
      ],
      "@g/*": [
        "./src/game/*"
      ],
      "@a/*": [
        "./assets/*"
      ],
      "@vbw/*": [
        "./src/vbWebConnector/*"
      ]
    },
    // Don't include anything at node_modules/@types
    "types": [
      "vite/client",
      "node",
      "lodash"
    ],
    "declaration": true
  }
  // https://stackoverflow.com/questions/64626846/typescript-tsc-not-picking-up-tsconfig-json-inside-a-subdirectory
}